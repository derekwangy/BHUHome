<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_ffffff">

    <ImageView
        android:id="@+id/image_view_back"
        android:layout_width="60dp"
        android:layout_height="46dp"
        android:src="@mipmap/title_back_arrow"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/text_view_get_code"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_gravity="right"
        tools:text="重新获取(30)"
        android:gravity="center"
        android:paddingLeft="@dimen/dimen_fifteen"
        android:paddingStart="@dimen/dimen_fifteen"
        android:paddingEnd="@dimen/dimen_fifteen"
        android:paddingRight="@dimen/dimen_fifteen"
        android:textColor="@color/color_3b93eb"
        android:textSize="@dimen/font_fourteen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:text="请输入验证码"
        android:textColor="@color/color_1a1a1a"
        android:textSize="@dimen/font_eighteen" />

    <View
        style="@style/gray_line"
        android:layout_marginTop="46dp" />

    <com.jungly.gridpasswordview.GridPasswordView
        android:id="@+id/text_code"
        android:layout_width="@dimen/dimen_two_hundred_sixty"
        android:layout_height="@dimen/dimen_forty"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="126dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:gpvGridColor="@android:color/white"
        app:gpvLineColor="@color/color_ffffff"
        app:gpvLineWidth="0dp"
        app:gpvPasswordLength="4"
        app:gpvTextSize="@dimen/font_twenty_two"
        app:gpvPasswordType="numberPassword"/>
    
    <LinearLayout
        style="@style/gray_line"
        android:layout_width="@dimen/dimen_two_hundred_sixty"
        android:layout_marginTop="166dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen_ten"
            android:layout_marginStart="@dimen/dimen_ten"
            android:layout_marginEnd="@dimen/dimen_ten"
            android:layout_marginRight="@dimen/dimen_ten"
            android:layout_height="@dimen/dimen_zero_point_five"
            android:background="@color/color_3b93eb"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen_ten"
            android:layout_marginStart="@dimen/dimen_ten"
            android:layout_marginEnd="@dimen/dimen_ten"
            android:layout_marginRight="@dimen/dimen_ten"
            android:layout_height="@dimen/dimen_zero_point_five"
            android:background="@color/color_3b93eb"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen_ten"
            android:layout_marginStart="@dimen/dimen_ten"
            android:layout_marginEnd="@dimen/dimen_ten"
            android:layout_marginRight="@dimen/dimen_ten"
            android:layout_height="@dimen/dimen_zero_point_five"
            android:background="@color/color_3b93eb"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen_ten"
            android:layout_marginStart="@dimen/dimen_ten"
            android:layout_marginEnd="@dimen/dimen_ten"
            android:layout_marginRight="@dimen/dimen_ten"
            android:layout_height="@dimen/dimen_zero_point_five"
            android:background="@color/color_3b93eb"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_view_audio"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_forty"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="250dp"
        android:text="收不到短信? 试试语音验证"
        android:textColor="@color/color_3b93eb"
        android:visibility="gone"
        android:textSize="@dimen/font_fourteen" />

</FrameLayout>