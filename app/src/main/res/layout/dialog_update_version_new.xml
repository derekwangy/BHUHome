<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_solid_corners"
    android:gravity="center_horizontal"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimens_20dp"
        android:layout_marginTop="@dimen/dimens_20dp"
        android:background="@drawable/selector_dialog_right_btn_bg"
        android:gravity="center"
        android:text="版本更新！"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/dimens_18dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtVersionInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_25dp"
            android:layout_marginRight="@dimen/dimens_25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimens_16dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens_0.5dp"
        android:layout_marginTop="@dimen/dimens_20dp"
        android:background="@color/color_cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimens_50dp"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_left_btn_bg"
            android:gravity="center"
            android:text="忽略"
            android:textColor="@color/color_959595"
            android:textSize="@dimen/dimens_16dp" />

        <TextView
            android:layout_width="@dimen/dimens_0.5dp"
            android:layout_height="@dimen/dimens_50dp"
            android:layout_weight="0"
            android:background="@color/color_cccccc" />

        <TextView
            android:id="@+id/dialog_confirm_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimens_50dp"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_right_btn_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/dimens_16dp" />
    </LinearLayout>
</LinearLayout>