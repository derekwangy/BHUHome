<resources>

    <!-- Base application theme. -->
    <style name="d_c_t_app_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/d_c_c_3F51B5</item>
        <item name="colorPrimaryDark">@color/d_c_c_303F9F</item>
