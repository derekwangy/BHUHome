<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="notitle">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="RedAgate">
    </style>
    <style name="RedAgate.WrapWidth.WrapHeight" parent="RedAgate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 3.2.5 新版本细分割线 细 -->
    <style name="split_line_fine" parent="RedAgate.WrapWidth.WrapHeight">
        <item name="android:background">@color/color_f0f0f0</item>
        <item name="android:layout_height">@dimen/d0.5</item>
    </style>

    <!-- 3.2.5 新版本分割线 宽 -->
    <style name="split_line_wide" parent="RedAgate.WrapWidth.WrapHeight">
        <item name="android:background">@color/color_f0f0f0</item>
        <item name="android:layout_height">@dimen/d10</item>
    </style>

    <style name="list_cell_divider_horizontal">
        <item name="android:background">@color/color_757575</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/dimens_0.5dp</item>
    </style>

    <style name="dialog_window_anim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <!-- 通用 条目左边没有图标的textView， 设置、我fragment中没有图标的条目中的TextView使用该style -->
    <style name="text_view_no_icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d50</item>
        <item name="android:paddingLeft">@dimen/d15</item>
        <item name="android:paddingRight">@dimen/d15</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:background">@color/color_ffffff</item>
        <item name="android:textColor">@color/color_1a1a1a</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 灰色线条 -->
    <style name="gray_line" parent="RedAgate.WrapWidth.WrapHeight">
        <item name="android:background">@color/color_dfdfdf</item>
        <item name="android:layout_height">@dimen/d0.5</item>
    </style>
</resources>
